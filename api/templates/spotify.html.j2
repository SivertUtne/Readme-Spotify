<svg width="528" height="197" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <foreignObject width="528" height="197">
        <div xmlns="http://www.w3.org/1999/xhtml" class="container">
            <style>
                /* Setting font for all text */
                div {
                    font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
                }

                /* Text saying "Vibed to" or "Recently vibed to" */
	            .currentStatus {
	                display: block;
	                position: static;
	                margin: 0px 0px 5px 10px;
                    font-size: 20px;
                    color: #a4acba;
                }

				/* container for song info */
                .songcontainer {
                    display: flex;
                    padding: 5px;
                    height: 135px;
                    border-radius: 10px;
                    background-color: #131313;
                }

				/* container for Cover-image */
                .art {
                    float: left;
                    width: 28%;
                }

                .cover {
                    width: 132px;
                    height: 132px;
                    border-radius: 7px;
                    border: 1px solid #21AF43;
                }

				/* container for songname and artist */
                .content {
                    margin-left: 7px;
                    width: 69%;
                }

				/*TODO: Make overflowing text scroll?*/
                .song {
                    margin-top: 25px;
                    text-align: center;
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    font-size: 26px;
                    color: #666;
                }

                .artist {
                    text-align: center;
                    margin-top: 4px;
                    font-size: 14px;
                    color: #b3b3b3;
                }

				/* container for the animated bars */
                #bars {
                    width: 325px;
                    height: 50px;
                    position: absolute;
                    left: 145px;
                    bottom: 25px;
                }

				/* a single animated bar */
                .bar {
                    width: 3px;
                    bottom: 1px;
                    height: 3px;
                    position: absolute;
                    background: #21AF43;
                    border-radius: 1px 1px 0px 0px;
                    animation: sound 0ms -800ms linear infinite alternate;
                }

                /* adjustment of animation at different points */
                @keyframes sound {
                    0% {
                        height: 5px;
                        opacity: 0.25;
                    }
                    10% {
                        height: 5px;
                        opacity: 0.40;
                    }
                    20% {
                        height: 15px;
                        opacity: 0.50;
                    }
                    50% {
                        height: 25px;
                        opacity: 0.60;
                    }
                    80% {
                        height: 33px;
                        opacity: 0.85;
                    }
                    85% {
                        height: 38px;
                        opacity: 0.95;
                    }
                    100% {
                        height: 45px;
                        opacity: 0.99;
                    }
                }
                {{barCSS|safe}}
            </style>

            <div class="main">
	            <div class="currentStatus">{{status}}</div>
	            <div class="songcontainer">
	                <a class="art" href="{}" target="_blank">
	                    <center>
	                        <img src="data:image/png;base64, {{image}}" class="cover" />
	                    </center>
	                </a>
	                <div class="content">
	                    <div class="song">{{songName}}</div>
	                    <div class="artist">{{artistName}}</div>
	                    <div id="bars">{{animatedBars|safe}}</div>
	                </div>
	            </div>
            </div>
        </div>
    </foreignObject>
</svg>